<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.web.calendar</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="86"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" string="Calendar" data-key="calendar_settings">
                        <h2>Calendar Time Settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div>
                                <label string="Start Time" class="o_light_label"/>
                                <field name="calendar_start_time" widget="float_time"/>
                            </div>
                            <div>
                                <label string="End Time" class="o_light_label"/>
                                <field name="calendar_end_time" widget="float_time"/>
                            </div>
                            <div>
                                <label string="Start Work Time" class="o_light_label"/>
                                <field name="calendar_start_work_time" widget="float_time"/>
                            </div>
                            <div>
                                <label string="Row duration in minutes" class="o_light_label"/>
                                <field name="calendar_row_duration" widget="float_time"/>
                            </div>
                        </div>
                        <h2>Calendar Other settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div>
                                <label string="First day of week" class="o_light_label"/>
                                <field name="calendar_first_day_of_week"/>
                            </div>
                            <div>
                                <label string="Weekend days are visible" class="o_light_label"/>
                                <field name="is_weekend_active"/>
                            </div>
                            <div>
                                <label string="Allow events overlapping" class="o_light_label"/>
                                <field name="is_event_overlap"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

</odoo>
