<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_calendar_color_tag_fields" model="ir.actions.act_window">
        <field name="name">calendar.color.tag.fields</field>
        <field name="res_model">calendar.color.tag.fields</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="calendar_color_tag_fields_menu"
              name="Calendar color Tag Fields"
              />

    <menuitem id="calendar_color_tag_fields_submenu"
              name="Calendar color Tag Fields"
              parent="calendar_color_tag_fields_menu"
              action="action_calendar_color_tag_fields"/>

    <record id="calendar_color_tag_fields_form" model="ir.ui.view">
        <field name="name">calendar color tag fields</field>
        <field name="model">calendar.color.tag.fields</field>
        <field name="arch" type="xml">
            <form string="calendar color tag fields">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                        <field name="model_name"/>
                        <field name="allow_calendar_tag_color"/>
                        <field name="tag_field_id" attrs="{'invisible': [('allow_calendar_tag_color', '=', False)]}"/>
                        <field name="tag_field_name" invisible="1"/>
                        <field name="tag_field_model" invisible="1"/>
                        <field name="color_field_id"  attrs="{'invisible': [('allow_calendar_tag_color', '=', False)]}"/>
                        <field name="color_field_name" invisible="1"/>
                        <field name="font_color_field_id" attrs="{'invisible': [('allow_calendar_tag_color', '=', False)]}"/>
                        <field name="font_color_field_name" invisible="1"/>
                        <field name="allow_calendar_hatched"/>
                        <field name="calendar_state_field_id" attrs="{'invisible': [('allow_calendar_hatched', '=', False)]}"/>
                        <field name="calendar_state_field_name" invisible="1"/>
                        <field name="calendar_state_field_type" invisible="1"/>
                        <field name="calendar_state_field_relation" invisible="1"/>
                        <field name="hatched_states" attrs="{'invisible': [('allow_calendar_hatched', '=', False)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="calendar_color_tag_fields_tree" model="ir.ui.view">
        <field name="name">calendar color tag fields</field>
        <field name="model">calendar.color.tag.fields</field>
        <field name="arch" type="xml">
            <tree string="calendar color tag fields">
                <field name="name"/>
                <field name="model_id"/>
                <field name="model_name"/>
                <field name="tag_field_id"/>
                <field name="tag_field_name"/>
                <field name="tag_field_model"/>
                <field name="color_field_id"/>
                <field name="color_field_name"/>
                <field name="font_color_field_id"/>
                <field name="font_color_field_name"/>
                <field name="calendar_state_field_id"/>
                <field name="calendar_state_field_name"/>
                <field name="calendar_state_field_type"/>
            </tree>
        </field>
    </record>
</odoo>
